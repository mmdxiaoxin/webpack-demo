{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["@vue/runtime-dom"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["dom", "esnext"]
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "shims-vue.d.ts"],
    "exclude": ["node_modules"]
}
